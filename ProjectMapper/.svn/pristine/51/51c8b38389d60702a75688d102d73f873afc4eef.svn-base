<div class="form-validation">
   <form class="form-valide" action="#" method="post" id="boardCreateForm" enctype="multipart/form-data">
      <div class="row">
         <div class="col-xl-6">
            <div class="form-group row">
               <label class="col-lg-4 col-form-label" for="val-username">게시글 제목
                  <span class="text-danger">*</span>
               </label>
               <div class="col-lg-6">
                  <input type="text" class="form-control" id="pjBoardTitle"
                     name="pjBoardTitle" placeholder="Title..">
               </div>
            </div>
            <div class="form-group row">
               <label class="col-lg-4 col-form-label" for="val-username">첨부파일
                  <span class="text-danger">*</span>
               </label>
               <div class="col-lg-6">
                  <input type="file" name="pjBoardAfi" multiple class="form-control" />
               </div>
            </div>
 
            </fieldset>
            <fieldset class="row mb-3">
               <legend class="col-form-label col-sm-2 pt-0">타입</legend>
               <div class="col-sm-10">
                  <div class="form-check">
                     <input class="form-check-input" type="radio" name="pjBoardCateCode"
                        id="pjBoardCateCode" value="IO101" checked> <label
                        class="form-check-label" for="gridRadios1"> 공지 게시글 </label>
                  </div>
                  <div class="form-check">
                     <input class="form-check-input" type="radio" name="pjBoardCateCode"
                        id="pjBoardCateCode" value="IO102"> <label
                        class="form-check-label" for="gridRadios2"> 자유 게시글 </label>
                  </div>
               </div>
            </fieldset>
            <div class="form-group row">
               <label class="col-lg-4 col-form-label" for="val-suggestions">내용
                  <span class="text-danger">*</span>
               </label>
               <div class="col-lg-6">
                  <textarea class="form-control" id="pjBoardContent"
                     name="pjBoardContent" rows="5"
                     placeholder="What would you like to see?"></textarea>
               </div>
            </div>
         </div>

         <div class="col-lg-8 ml-auto">
            <button type="submit" class="btn btn-primary">Submit</button>
         </div>
      </div>
   </form>
</div>