 /* 프로젝트 기간 스타일 */
.project-date {
    background-color: #f1f8e9;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 25px;
}

.project-date strong {
    font-weight: bold;
    color: #333;
}

.project-date span {
    font-size: 14px;
    color: #555;
}

/* 공고, 포지션, 면접일자 등의 박스 스타일 */
.card-box {
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
}

.card-box h5 {
    font-size: 16px;
    color: #444;
    margin-bottom: 10px;
}


.card-box .form-check-label {
    font-size: 14px;
    color: #666;
}

/* 면접일자 input 스타일 */
.date-input-wrapper {
    display: flex;
    align-items: center;
}

.date-input-wrapper label {
    font-size: 14px;
    color: #444;
    margin-right: 10px;
}

.date-input-wrapper input[type="date"] {
    font-size: 14px;
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    background-color: #f5f5f5;
    width: 100%;
}

.date-input-wrapper input[type="date"]:focus {
    border-color: #4CAF50;
    box-shadow: 0 0 5px rgba(76, 175, 80, 0.3);
}

/* 공고 제목, 포지션 제목 스타일 */
.recruit-title, .position-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
}

